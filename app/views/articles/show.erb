<div class="article">
  <div class="container">

    <p class="date"><%= @article.created_at.strftime('%b %d') %></p>
    <h2><%= @article.title %></h2>
    <p class="author">by <%= @article.author %></p>
    <p class="article_content"><%= @article.body %></p>


    <% if current_user && (current_user.editor? || current_user.admin?) %>
        <p class="recipe-edit">
          <%= link_to "Edit Article", edit_article_path(@article.id) %>
        </p>
    <% end %>
    <% if current_user && current_user.admin? %>
        <p class="recipe-destroy">
          <%= link_to "Delete", article_path(@article) , method: "delete" %>
        </p>
    <% end %>

  </div>
</div>